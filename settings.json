{
  // Editor settings
  "editor.fontLigatures": true,
  "editor.fontWeight": "500",
  "editor.fontFamily": "JetBrains Mono, MonoLisa",
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "line",
  "editor.smoothScrolling": true,
  "editor.lineHeight": 1.85,
  "editor.guides.indentation": true,
  "editor.tabSize": 2,

  // Terminal settings
  "terminal.integrated.gpuAcceleration": "off",
  "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
  "terminal.integrated.fontSize": 14,

  // Language server settings
  "python.languageServer": "Pylance",
  "javascript.validate.enable": true,
  "javascript.suggestionActions.enabled": false,
  "python.terminal.executeInFileDir": true,

  // Explorer settings
  "explorer.compactFolders": false,
  "breadcrumbs.enabled": false,
  "symbols.hidesExplorerArrows": false,

  // Editor behavior settings
  "editor.scrollbar.vertical": "visible",
  "editor.scrollbar.horizontal": "visible",
  "editor.scrollbar.horizontalScrollbarSize": 12,
  "editor.scrollbar.verticalScrollbarSize": 12,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "gutter",
  "editor.renderWhitespace": "none",
  "editor.formatOnSave": false,
  "editor.showFoldingControls": "mouseover",
  "editor.glyphMargin": false,
  "editor.occurrencesHighlight": "off" ,
  "editor.stickyScroll.enabled": false,
  "workbench.layoutControl.enabled": false,

  // Live server settings
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.AdvanceCustomBrowserCmdLine": "",
  "liveServer.settings.CustomBrowser": "firefox",
  "liveServer.settings.useLocalIp": true,

  // Formatting settings
  "[python]": {
    "editor.formatOnType": true,
    "editor.defaultFormatter": "ms-python.autopep8"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Workbench settings
  "window.titleBarStyle": "custom",
  "workbench.colorCustomizations": {
    "vityBarBadge.background": "#4D4C7D"
  },
  "workbench.statusBar.visible": false,
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.labelFormat": "short",
  "workbench.tree.renderIndentGuides": "none",
  "workbench.startupEditor": "none",
  "workbench.iconTheme": "symbols",

  // Additional settings
  "window.menuBarVisibility": "compact",
  "window.density.editorTabHeight": "compact",
  "window.zoomLevel": 1,
  "git.autofetch": true,
  "code-runner.runInTerminal": true,
  "files.autoSave": "onWindowChange",
// TypeScript settings
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.tsdk": "node_modules/typescript/lib",

  // Diff editor settings
  "diffEditor.ignoreTrimWhitespace": true,
  "window.commandCenter": false,
  "workbench.colorTheme": "Gruvbox Light Soft",
  "editor.fontSize": 16,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "chat.commandCenter.enabled": false,


 "vim.leader": "<Space>",
"vim.hlsearch": true,
"vim.insertModeKeyBindings": [
  {
    "before": ["j", "k"],
    "after": ["<Esc>"]
  }
],
"vim.normalModeKeyBindingsNonRecursive": [ 
  { "before": ["leader", "v"], "commands": [":vsplit"] }, 
  { "before": ["leader", "s"], "commands": [":split"] }, 
  
  // Buffer Navigation
  { "before": ["<S-h>"], "commands": [":bprevious"] },
  { "before": ["<S-l>"], "commands": [":bnext"] }, 

  // Pane Switching
  { "before": ["leader", "h"], "commands": ["workbench.action.focusLeftGroup"] },
  { "before": ["leader", "j"], "commands": ["workbench.action.focusBelowGroup"] },
  { "before": ["leader", "k"], "commands": ["workbench.action.focusAboveGroup"] },
  { "before": ["leader", "l"], "commands": ["workbench.action.focusRightGroup"] }
],
"vim.visualModeKeyBindings": [
  // Stay in visual mode while indenting (FIXED)
  { "before": [">"], "commands": ["editor.action.indentLines"], "repeat": true },
  { "before": ["<"], "commands": ["editor.action.outdentLines"], "repeat": true },

  // Toggle comment selection
  { "before": ["leader", "c"], "commands": ["editor.action.commentLine"] }
],
"vim.handleKeys": {
  "<C-a>": false,
  "<C-b>": false,
  "<C-e>": false,
  "<C-n>": false,
  "<C-x>": false,
  "<C-p>": false, // Used for opening new file
  "<C-w>": false, // Used for deleting open windows 
  "<S-j>": false, // Used for toggling terminal 
  "<C-f>": false  // Used for specific words 
}, 
"workbench.activityBar.location": "hidden"
  
}
